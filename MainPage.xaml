<Page
    x:Class="StudentGradeManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="LightGray">

    <StackPanel Padding="20">
        <Label Content="Student ID" Margin="0,10"/>
        <TextBox x:Name="StudentID" Margin="0,10"/>

        <Label Content="First Name" Margin="0,10"/>
        <TextBox x:Name="FirstName" Margin="0,10"/>

        <Label Content="Last Name" Margin="0,10"/>
        <TextBox x:Name="LastName" Margin="0,10"/>

        <Label Content="Class" Margin="0,10"/>
        <TextBox x:Name="ClassName" Margin="0,10"/>

        <Label Content="Grade" Margin="0,10"/>
        <TextBox x:Name="Grade" Margin="0,10"/>

        <Button Content="Add Student" Click="AddStudent_Click" Margin="0,20"/>

        <ListBox x:Name="StudentListBox" Margin="0,20"/>

        <Button Content="Save Grades" Click="SaveGrades_Click" Margin="0,10"/>

        <Button Content="Open Grades" Click="OpenGrades_Click" Margin="0,10"/>
    </StackPanel>
</Page>
